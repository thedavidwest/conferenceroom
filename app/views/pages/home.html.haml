.home-wrapper
  .home-content
    - if user_signed_in?
      = month_calendar events: @reservations do |date, reservations|
        = date
        - reservations.each do |reservations|
          %div
            = reservation.name
      = link_to "New Reservation", new_reservation_path, :class => "home-btn"
      = link_to "Log Out", destroy_user_session_path, method: :delete, :class => "home-btn"
    - else
      %h1 Conference Room
      %p Reserve your spot.
      = link_to "Sign In", new_user_session_path, :class => "home-btn"
